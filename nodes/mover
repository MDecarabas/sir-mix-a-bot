#! /usr/bin/env python

import rospy
import actionlib

import moveit_commander
from moveit_msgs.msg import MoveItErrorCodes
from moveit_commander.conversions import pose_to_list

class mover():
    ''' 
    The mover class takes care of being able to grasp the ingrdients neccesary for the drink, getting them to the pouring station, and returning them.
    '''

    def __init__(self):

        scene = moveit_commander.PlanningSceneInterface()

        group_name = "panda_arm"

        self.move_group = moveit_commander.MoveGroupCommander(group_name)
        # self.move_gripper = moveit_commander.MoveGroupCommander('interbotix_gripper')

        self.client = actionlib.SimpleActionClient('topic_name of action', )
        self.client.wait_for_server()
        self.grab()
        # self.transport()
        # self.place()
        

    def grab(self, data):
        goal = data
        # Fill in the goal here
        self.client.send_goal(goal)
        self.client.wait_for_result(rospy.Duration.from_sec(5.0))
    
    # def transport(self, data):
    #     return False
    
    # def place(self, data):
    #     return False
        
if __name__ == "__main__":
        rospy.init_node("mover") #Initialize the node
        Mover = mover()
        rospy.spin() #Keep running 
